{
  "campaign": {
    "name": "Final Comprehensive Test Campaign",
    "version": "1.0",
    "description": "Final numerical test campaign for Journal of Cleaner Production article",
    "created": "2026-01-18"
  },
  "solver_settings": {
    "time_limit_sec": 1800,
    "optimality_gap": 0.01,
    "threads": 4
  },
  "experiments": {
    "scalability": {
      "enabled": true,
      "description": "BOM size sweep from 2 to 150 components",
      "model_type": "PLM",
      "strategy": "EMISTAXE",
      "tax_rate": 0.0,
      "service_time": 1,
      "suppliers": 10,
      "instances": [2, 3, 4, 5, 6, 7, 8, 10, 13, 15, 20, 25, 26, 30, 35, 40, 50, 60, 80, 90, 100, 123, 150]
    },
    "topology_baseline": {
      "enabled": true,
      "description": "Topology scenario baseline emissions",
      "model_type": "PLM",
      "strategy": "EMISTAXE",
      "tax_rate": 0.0,
      "service_time": 1,
      "suppliers": 10,
      "instance_families": ["multi_level", "parallel"]
    },
    "carbon_tax_sweep": {
      "enabled": true,
      "description": "Carbon tax policy analysis",
      "model_type": "PLM",
      "strategy": "EMISTAXE",
      "service_time": 1,
      "suppliers": 10,
      "tax_rates": [0.0, 0.01, 0.02, 0.03, 0.05, 0.10],
      "representative_instances": ["bom_5", "bom_13", "bom_26", "bom_50", "bom_ml4_30", "bom_par4"]
    },
    "carbon_cap_sweep": {
      "enabled": true,
      "description": "Carbon cap policy analysis",
      "model_type": "PLM",
      "strategy": "EMISCAP",
      "service_time": 1,
      "suppliers": 10,
      "cap_percentages": [1.0, 0.95, 0.90, 0.85, 0.80, 0.75, 0.70],
      "representative_instances": ["bom_5", "bom_13", "bom_26", "bom_50", "bom_ml4_30", "bom_par4"]
    },
    "carbon_hybrid": {
      "enabled": true,
      "description": "Hybrid tax+cap policy analysis",
      "model_type": "PLM",
      "strategy": "EMISHYBRID",
      "service_time": 1,
      "suppliers": 10,
      "combinations": [
        {"tax": 0.01, "cap_pct": 1.00, "label": "low_tax_no_cap"},
        {"tax": 0.01, "cap_pct": 0.90, "label": "low_tax_soft_cap"},
        {"tax": 0.02, "cap_pct": 0.90, "label": "med_tax_soft_cap"},
        {"tax": 0.01, "cap_pct": 0.80, "label": "low_tax_tight_cap"},
        {"tax": 0.02, "cap_pct": 0.80, "label": "med_tax_tight_cap"},
        {"tax": 0.03, "cap_pct": 0.80, "label": "high_tax_tight_cap"},
        {"tax": 0.02, "cap_pct": 0.70, "label": "med_tax_strict_cap"},
        {"tax": 0.03, "cap_pct": 0.70, "label": "high_tax_strict_cap"}
      ],
      "representative_instances": ["bom_5", "bom_13", "bom_26", "bom_50"]
    },
    "service_time_sensitivity": {
      "enabled": true,
      "description": "Service time sensitivity analysis",
      "model_type": "PLM",
      "strategies": ["EMISTAXE", "EMISCAP"],
      "service_times": [0, 1, 3],
      "tax_rate": 0.02,
      "cap_percentage": 0.85,
      "suppliers": 10,
      "representative_instances": ["bom_5", "bom_13", "bom_26", "bom_50"]
    },
    "multi_objective": {
      "enabled": true,
      "description": "Multi-objective Pareto front generation",
      "model_type": "PLM",
      "num_pareto_points": 10,
      "service_time": 1,
      "suppliers": 10,
      "objectives": ["cost", "emissions", "DIO", "WIP"],
      "representative_instances": ["bom_5", "bom_13", "bom_26"]
    },
    "nlm_comparison": {
      "enabled": true,
      "description": "PLM vs NLM comparison for selected instances",
      "strategies": ["EMISTAXE", "EMISCAP"],
      "tax_rate": 0.02,
      "cap_percentage": 0.85,
      "service_time": 1,
      "suppliers": 10,
      "representative_instances": ["bom_5", "bom_13", "bom_26"]
    }
  },
  "kpi_definitions": {
    "cost": {
      "total_cost": "Objective function value (cost + carbon component)",
      "procurement_cost": "Raw material costs from suppliers",
      "inventory_cost": "Inventory holding costs at buffer positions",
      "carbon_cost": "Monetized carbon cost (tax * emissions)"
    },
    "service": {
      "achieved_service_time": "SvT0 at final node",
      "service_constraint_slack": "SvT_promised - SvT_achieved"
    },
    "carbon": {
      "total_emissions": "Total CO2 emissions (kg)",
      "storage_emissions": "Emissions from inventory storage",
      "transport_emissions": "Emissions from transportation",
      "supplier_emissions": "Embodied emissions from suppliers",
      "emission_reduction_pct": "((E_baseline - E) / E_baseline) * 100"
    },
    "inventory": {
      "WIP_level": "Work-in-process inventory level",
      "WIP_reduction_pct": "((WIP_baseline - WIP) / WIP_baseline) * 100",
      "DIO": "Days inventory outstanding (sum of decoupled lead times)",
      "DIO_improvement_pct": "((DIO_baseline - DIO) / DIO_baseline) * 100",
      "ITR": "Inventory turnover ratio (COGS / avg_inventory)"
    },
    "ddmrp": {
      "buffer_count": "Number of positioned buffers",
      "buffer_positions": "List of nodes with buffers (x[i] = 1)",
      "decoupling_structure": "Decoupled lead times at each node"
    },
    "supplier": {
      "selected_suppliers": "Suppliers chosen per material",
      "order_quantities": "q[i][j] per supplier per material",
      "capacity_utilization": "q[i][j] / supplier_capacity[j]"
    },
    "computational": {
      "solver_status": "OPTIMAL / FEASIBLE / TIMEOUT / INFEASIBLE",
      "runtime_sec": "Solver computation time",
      "mip_gap": "MIP optimality gap if non-zero"
    }
  },
  "baseline_references": {
    "description": "Baseline emissions computed with zero carbon tax for cap percentage calculations",
    "method": "Run each instance with strategy=EMISTAXE, tax=0.0 first to establish E0"
  },
  "output_configuration": {
    "results_folder": "results/final_campaign/",
    "figures_folder": "results/final_campaign/figures/",
    "tables_folder": "results/final_campaign/tables/",
    "consolidated_csv": "results/final_campaign/consolidated_results.csv",
    "report_file": "results/final_campaign/final_report.md",
    "checklist_file": "results/final_campaign/campaign_checklist.md"
  }
}
